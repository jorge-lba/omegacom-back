{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "standard",
        "plugin:mocha/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "mocha"
    ],
    "rules": {
      "mocha/no-exports": "off",
      "no-use-before-define": "off",
      "no-useless-constructor": "off",
      "mocha/no-top-level-hooks": "off",
      "mocha/max-top-level-suites": "off"
    },
    "ignorePatterns": ["**/*.d.ts"]
}
