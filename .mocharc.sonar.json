{
  "spec": "**/*.spec.ts",
	"extension": ["ts"],
	"require":  ["ts-node/register", "tsconfig-paths/register"],
  "reporter": "mocha-sonarqube-reporter",
  "reporter-option":["output=./coverage/reporter.xml"],
	"inline-diffs ": true,
	"full-trace": true,
	"recursive": true,
	"diff": true,
	"exit": true,
	"slow": 300,
	"retries": 3,
	"timeout": 0,
	"ignore": [
    "node_modules", 
    "dist", 
    "seeds", 
    ".devcontainer", 
    ".vscode"
  ]
}